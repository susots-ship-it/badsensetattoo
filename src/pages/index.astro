    font-size: 1.1rem;
    letter-spacing: 0.05em;
    color: var(--color-text);
    white-space: nowrap;
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .logo {
      font-size: 1.75rem;
      letter-spacing: 0.1em;
    }
  }

  .nav {
    display: none;
    gap: 2.5rem;
  }

  .nav a {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    transition: color 0.3s ease;
  }

  .nav a:hover {
